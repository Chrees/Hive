// Append new data
$("<%=j render(:partial => 'posts', :object => @posts) %>")
  .appendTo($(".infinite-table article"));

// Update pagination link
<% if @posts.last_page? %>
  $('.pagination').html("");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@posts, '', :remote => true) %>");
<% end %>